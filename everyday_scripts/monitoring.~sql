select * from dba_hist_active_sess_history dsh where 
sql_exec_start BETWEEN TO_DATE('21.05.2018 14:36:00', 'DD.MM.YYYY HH24:MI:SS') and TO_DATE('21.05.2018 15:00:00', 'DD.MM.YYYY HH24:MI:SS')
